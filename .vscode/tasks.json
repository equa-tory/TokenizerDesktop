{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build StudentApp",
      "type": "shell",
      "command": "C:\\Windows\\Microsoft.NET\\Framework\\v3.5\\MSBuild.exe",
      "args": ["TokenizerStudent.csproj", "/p:DefineConstants=STUDENT"],
      "group": "build"
    },
    {
      "label": "Build TeacherApp",
      "type": "shell",
      "command": "C:\\Windows\\Microsoft.NET\\Framework\\v3.5\\MSBuild.exe",
      "args": ["TokenizerTeacher.csproj", "/p:DefineConstants=TEACHER"],
      "group": "build"
    },
    {
      "label": "Run Student App",
      "type": "shell",
      "command": "${workspaceFolder}\\bin\\Debug\\Student\\TokenizerStudent.exe",
      "dependsOn": "Build StudentApp",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Run Teacher App",
      "type": "shell",
      "command": "${workspaceFolder}\\bin\\Debug\\Teacher\\TokenizerTeacher.exe",
      "dependsOn": "Build TeacherApp",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}

